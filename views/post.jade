extends layout

block content
  h1.content-subhead Recent posts
  section.post
    header.post-header
      h2.post-title
        a(href=post.url)
          = post.title
      p.post-meta
        small.content-subhead #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
        - each tag in post.tags
          a(href=tagUrl(tag), class='post-category post-category-#{tag}').
            #{tag}
    .post.description
      != post.content
  section.comments
    div#disqus_thread
    script(data-cfasync="false", src="/javascript.js")
    script(data-cfasync="false", type="text/javascript").
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'jh3141'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    noscript Please enable JavaScript to view the 
      a(href="http://disqus.com/?ref_noscript") comments powered by Disqus.
    a(href="http://disqus.com" class="dsq-brlink") comments powered by 
      span.logo-disqus Disqus
    

